<h1>Register</h1>

<%= form_for @user, url: {action: "create"}, html: {class: "new_user_form"} do |f| %>

  <%= f.label :username %>:
  <%= f.text_field :username %>
<br>
  <%= f.label :email %>:
  <%= f.email_field :email %>
<br>

  <%= f.label :password %>:
  <%= f.password_field :password %>
<br>

  <%= f.submit "Submit" %>
<% end %>
